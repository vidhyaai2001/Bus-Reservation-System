<%= render @bus %>

<div class="mt-3">
  <% if current_user == @bus.bus_owner %>
    <%= link_to "Edit this bus", edit_bus_path(@bus), class: 'btn btn-primary mr-2' %>  
    

    <%= link_to "Destroy this bus", @bus, method: :delete, class: 'btn btn-danger', data: { turbo_confirm: 'Are you sure?', turbo_method: :delete, turbo_frame: 'head' } %>
    <%= link_to "Bus Total Reservations", bus_reservations_path(@bus), class: 'btn btn-primary mr-2' %>  
  <% end %>
  <%= link_to "Back to Buses", buses_path, class: 'btn btn-secondary mr-2' %>
</div>

</div>
</div>
</div>